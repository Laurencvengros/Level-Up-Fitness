<div class="card">
    <div class="card-body">
        <h3 class="card-header">Sign Up</h3>
        <form id="signup-form">
            <div class="form-group">
                <label for="exampleInputName" for="name-signup">Name</label>
                <input type="text" class="form-control" id="name-signup" autofocus="true" class aria-describedby="name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail" for="email-signup">Email</label>
                <input type="text" class="form-control" id="email-signup" autofocus="true" class
                    aria-describedby="email">
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" autofocus="true" id="password-signup">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
            <hr />
            <a class="login-link" href="/login">Already have an account? Login</a>
        </form>
    </div>
</div>
<script src="./js/signup.js"></script> 