<!DOCTYPE html>
    <head>
        <meta charset="UTF-8">
        <title>Level Up Fitness</title>
        <link rel = "stylesheet" href = "../../public/css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.1.3/flatly/bootstrap.min.css" />
        
    </head>

    <body>


            <div class="card">
                <div class="card-body">
                    <h3 class="card-header">Login</h3>
                    <form id="login-form">
                        <div class="form-group">
                            <label for="exampleInputEmail" for="email-login">Email</label>
                            <input type="text" class="form-control" id="email-login" autofocus="true" class aria-describedby="username">
                        </div>
                        <div class="form-group">
                            <label for="password-login">Password</label>
                            <input type="password" class="form-control" autofocus="true" id="password-login">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg" id="login-btn">Login</button>
                        <hr>
                        <a class="login-link" href="/signup">Sign up instead</a>
                    </form>
                </div>
            </div>
            <script> src="./public/js/login.js" </script>
    </body>
</html>