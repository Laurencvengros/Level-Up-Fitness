<div class="card">
    <div class="card-body">
        <h3 class="card-header">Login</h3>
        <form id="login-form">
            <div class="form-group">
                <label for="exampleInputEmail" for="email-login">Email</label>
                <input type="text" class="form-control" id="email-login" autofocus="true" />
            </div>
            <div class="form-group">
                <label for="password-login">Password</label>
                <input type="password" class="form-control" autofocus="true" id="password-login" />
            </div>
            <button type="submit" class="btn btn-lg" id="login-btn">Login</button>
            <hr />
            <a class="login-link" href="/signup">Sign up Instead</a>
        </form>
    </div>
</div>
<script src="./js/login.js"></script> 